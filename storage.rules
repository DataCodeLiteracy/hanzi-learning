rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 한자 쓰기 연습 이미지 업로드 허용
    match /writing_submissions/{userId}/{date}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 임시로 모든 경로 허용 (개발용)
    match /{allPaths=**} {
      allow read, write: if request.time < timestamp.date(2055, 11, 20);
    }
  }
}
